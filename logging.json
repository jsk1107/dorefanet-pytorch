{
  "version": 1,
  "formatters": {
    "simple": {"format": "%(asctime)s - %(levelname)s - %(message)s"}
  },

  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },

    "info_file_handler": {
      "class": "logging.FileHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "filename": "logging.log"
      }
    },

  "root": {
    "level": "DEBUG",
    "handlers": ["console", "info_file_handler"]
  }
}
